{
  "functions": {
    "source": ".",
    "runtime": "nodejs20",
    "runtimeOptions": {
      "maxInstances": 10
    }
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "platform",
          "region": "us-central1"
        }
      }
    ]
  }
}
